<div class="relative max-w-xl mx-auto ">

  <form
    action="https://formspree.io/f/xrbgzkgg"
    method="POST"
    class="relative p-6 space-y-4"
  >
    <div class="flex space-x-4 items-center">
        <div class="w-2/5">
            <label for="name" class=" text-md  text-gray-800 dark:text-gray-200">
                Nombre:
              </label>
              <input type="text" id="name" name="name" required class="mt-1 block w-full rounded-md bg-white/50 dark:bg-gray-700/50  dark:text-white
                border-gray-300 dark:border-gray-600 shadow-sm
                focus:border-yellow-200 focus:ring focus:ring-yellow-200 focus:ring-opacity-100">
        </div>
        <div class="w-3/5">
            <label for="email" class="  text-gray-800 dark:text-gray-200">Email:</label>
      <input type="email" id="email" name="email" required class="mt-1 block w-full rounded-md bg-white/50 dark:bg-gray-700/50 border-gray-300 dark:border-gray-600 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 dark:text-white">
        </div>
      
    </div>
    <div>
        <label for="message" class="block text-gray-800 dark:text-gray-200">
            ¿Cómo puedo ayudarte?:
        </label>
        <textarea id="message" name="message" rows="4" required class="mt-1 block w-full rounded-md bg-white/50 dark:bg-gray-700/50 border-gray-300 dark:border-gray-600 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 dark:text-white">
        </textarea>
    </div>
    <button type="submit" class="w-full py-1 px-4 border border-transparent rounded-full shadow-sm text-md font-medium text-white bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:focus:ring-offset-gray-800">
      Enviar
    </button>
  </form>
</div>