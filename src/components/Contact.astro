<div class=" items-center relative max-w-2xl mx-auto ">

  <form
    action="https://formspree.io/f/xrbgzkgg" 
    method="POST"
    class="relative px-6 space-y-4 text-sm"
  >
    <div class="flex space-x-4 items-center">
        <div class="w-2/5">
            <label for="name" class=" text-md  text-gray-800 dark:text-gray-200">
                Nombre:
              </label>
              <input type="text" id="name" name="name" required class="mt-1 py-1 block w-full rounded-lg bg-white/50 dark:bg-gray-700/50
                shadow-lg border border-1-gray dark:border-none
                focus:ring-1 focus:ring-yellow-400 focus:outline-none focus:border-none ">
        </div>
        <div class="w-3/5">
            <label for="email" class="  text-gray-800 dark:text-gray-200">
                Email:
            </label>
            <input type="email" id="email" name="email" required class="mt-1 p-1 block w-full rounded-lg bg-white/50 dark:bg-gray-700/50
            shadow-lg border border-1-gray dark:border-none
            focus:ring-1 focus:ring-yellow-400 focus:outline-none focus:border-none">
        </div>
    </div>
    <div>
        <label for="message" class="block text-gray-800 dark:text-gray-200">
            ¿Cómo puedo ayudarte?:
        </label>
        <textarea id="message" name="message" rows="4" required class="mt-1 p-1 block w-full rounded-lg bg-white/50 dark:bg-gray-700/50
        shadow-lg border border-1-gray dark:border-none
        focus:ring-1 focus:ring-yellow-400 focus:outline-none focus:border-none">
        </textarea>
    </div>
    <button type="submit" class="w-full p-1 
        border border-transparent rounded-full 
        shadow-sm text-md font-medium bg-black/10 backdrop-blur-xl 
        hover:bg-white/10 dark:hover:text-yellow-400 transition-all focus:outline-none ">
        Enviar
    </button>
  </form>
</div>

<script>
  const form = document.querySelector('form');
  form?.addEventListener('submit', (event) => {
    const name = (document.getElementById('name') as HTMLInputElement)?.value.trim();
    const email = (document.getElementById('email') as HTMLInputElement)?.value.trim();
    const message = (document.getElementById('message') as HTMLTextAreaElement)?.value.trim();

    if (!name || !email || !message) {
      alert('Por favor, completa todos los campos antes de enviar el formulario.');
      event.preventDefault();
    }
  });
</script>

